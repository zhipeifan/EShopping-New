@using EShopping.Entity.Response.DTO
@using EShopping.Common

@model List<ProductDTO>


<header id="header" class="shopcar-top">
    
    <h2 style="background-color: #BF0000; color: #fff !important;">秘密团</h2>
</header>
<section id="page-content" class="shopcar-content">
    <div class="secret_tabs">
        <ul>
            <li> <a href="@Url.Action("Index", "Secret")">我的秘密团</a><em></em></li>
            <li ><a href="@Url.Action("SecretGM", "Secret")">闺蜜团</a><em></em></li>
            <li class="curr"> 基友团<em></em></li>
        </ul>
    </div>
    <div class="swiper-container">
     
                    <div class="secret_tabs_list">
                        <ul>

                            @if (Model != null && Model.Count > 0)
                            {
                                foreach (var item in Model)
                                {
                                    <li>
                                        <img class="lazy" src="/images/defaultloading.gif" data-original="@item.coverImg1" width="100%" />
                                        <h4>@item.productName</h4>
                                        <a href="@Url.Action("SecretStart", "Secret", new { productId = @item.Id, spellbuyproductId = @item.spellbuyproductId, type = 1 })">发起秘密团</a>
                                    </li>
                                }

                            }
                          
                        </ul>
                    </div>
             
    </div>
</section>
