
@{
    Layout = "";
    
}
@using EShopping.Entity.Response.DTO
@using EShopping.Common
@using EShopping.WXUI.Controllers

@model UserDTO
           @{
               
           
               int count = (int)ViewBag.ShoppingCarCount;
           }

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>shopping</title>
    <link rel="stylesheet" href="../../css/base.css" />
    <link rel="stylesheet" href="../../css/media.css" />
    <link rel="stylesheet" href="../../css/master.css" />
    <link rel="stylesheet" href="../../css/me.css" />
    <script type="text/javascript" src="../../js/libs/jquery-1.11.1.js"></script>
    <script type="text/javascript" src="../../js/libs/jpeg_encoder.js"></script>
    <script type="text/javascript" src="../../js/libs/localUI.js"></script>
    <script type="text/javascript" src="../../js/libs/html5shiv.js"></script>
</head>
<body style="background:#f0f0f0">
    @Html.ValidationSummaryAlert();
    <form action="/MyEShopping/SaveMyInfo" method="post" enctype="multipart/form-data">

        <div id="wrapper">
            <div class="container">
                <header id="header" class="shopcar-top">
                    <a class="backs" href="@Url.Action("Index", "MyEShopping")" title="返回" >
                        
                    </a>
                    <h2>修改头像</h2>
                </header>
                <section id="page-content" class="shopcar-content">


                    <div class="mod_photo">
                        <div class="main_photo">
                            <div class="bigPhoto left">
                                <div class="pull-left"></div>
                                <a href="javascript:;" title="">
                                    <img id="faceImg" width="100%" height="100%" src="@Model.faceImg" />
                                </a>
                            </div>
                         
                            <p>
                                @Html.TextBoxFor(c => c.nickName, new { placeholder = "请输入名称", style = "text-align:center" })
                                @Html.HiddenFor(c => c.NewFaceImg)
                            </p>
                        </div>
                    </div>
                    <div class="me_photo_list">
                        <div class="lr-pad">
                            <ul>
                                @*<li class="curr"><a href="javascript:;" title=""><img width="100%" src="../../images/carlist-img.jpg" /></a></li>
                                    <li><a href="javascript:;" title=""><img width="100%" src="../../images/carlist-img.jpg" /></a></li>
                                    <li><a href="javascript:;" title=""><img width="100%" src="../../images/carlist-img.jpg" /></a></li>
                                    <li><a href="javascript:;" title=""><img width="100%" src="../../images/carlist-img.jpg" /></a></li>
                                    <li><a href="javascript:;" title=""><img width="100%" src="../../images/carlist-img.jpg" /></a></li>
                                    <li><a href="javascript:;" title=""><img width="100%" src="../../images/carlist-img.jpg" /></a></li>
                                    <li><a href="javascript:;" title=""><img width="100%" src="../../images/carlist-img.jpg" /></a></li>*@
                            </ul>
                            <input id="modPhoto" type="submit" value="提交" />
                        </div>
                    </div>


                </section>
                <footer id="footer">
                    <ul>
                        <li ><a href="@Url.Action("Index", "Home")" title="">Shopping</a></li>
                        <li ><a href="@Url.Action("List", "Product")" title="">全部商品</a></li>
                        <li ><a href="@Url.Action("List", "NewPublic")" title=" ">最新揭晓</a></li>
                        <li  ><a href="@Url.Action("ShoppingList", "ShoppingCar")" title="">购物车</a><i id="carCount">@count</i></li>
                        <li class="curr"><a href="@Url.Action("Index", "MyEShopping")" title="">我的卡乐哲</a></li>
                    </ul>
                </footer>
            </div>
        </div>
        <script type="text/javascript">
            var ok = function (stop, data) {
                data.original.size = (data.original.size / 1024).toFixed(2);
                $('#img').attr('src', data.base64);
                setTimeout(function () { stop(); }, 1000);
            }
            var init = new LocalResize($('.pull-left'), { rWidth: 100, quality: 1, success: ok });
            init.change(function (n) {
                "function" == typeof this.defaults.change ? this.defaults.change(n) : void 0;
            }).success(function (n, t) {
                "function" == typeof this.defaults.success ? this.defaults.success(n, t) : void 0;
            }).reset = function () {
                init.UI.reset();
                "function" == typeof this.defaults.reset && this.defaults.reset();
            }

            $(function () {
                $.each($('.me_photo_list').find('li'), function (i, ele) {
                    $(ele).on('click', function () {
                        $('.me_photo_list').find('li').removeClass('curr')
                        $(ele).addClass('curr');
                        var imgSrc = $(ele).find('img').attr('src');
                        $('.main_photo').find('img').attr('src', imgSrc);
                    });
                })
            });
        </script>
        
        </form></body>
</html>
