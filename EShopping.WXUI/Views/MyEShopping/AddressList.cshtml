@using EShopping.Entity.Response.DTO


@model List<AddressDTO>




            <header id="header" class="shopcar-top">
                
                <h2 style="background-color: #BF0000; color: #fff !important;">收货地址</h2>
                <a class="newsAdd" style="color: #fff !important; " href="@Url.Action("ModifyAddress", "MyEShopping")" title="新增">新增</a>
            </header>
            <section id="page-content" class="pad70">
                <div id="address">



                    @if (Model != null && Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                          <div class="address_list">
                        <div class="lr-pad">
                            <p class="nameinfo"><span class="">@item.consignee</span><span>@item.phone</span></p>
                            <p class="add_name"><span>@item.address</span></p>
                        </div>
                        <div class="lr-pad border_top">
                            <ul class="oper">
                                <li class="@(item.isDefault?"addcurr curr":"")" ><a href="@Url.Action("SetDefaultAddress", "MyEShopping", new { Id = @item.id })">默认地址</a></li>
                                
                                <li class="del"><a href="@Url.Action("DeleteAddress", "MyEShopping", new { Id = @item.id })" onclick="return confirm('确定删除当前地址？');">删除</a></li>
                                <li class="edi"><a href="@Url.Action("ModifyAddress", "MyEShopping", new { Id = @item.id })">编辑</a></li>
                            </ul>
                        </div>
                    </div>
                        }
                    }
                     else
        {
              <div class="redItem">
                    <div class="lr-pad">
                        <div class="redpad">
                            <h5 style="margin-left:15%;">亲，您还没有收货地址哦</h5> 
                        </div>
                    </div>
                </div>
        }

                  




                </div>
            </section>
         
