@using EShopping.Entity.Response.DTO
@using EShopping.Common


@model  List<WalletDTO>


<header id="header" class="shopcar-top">

    <h2 style="background-color: #BF0000; color: #fff !important;">我的红包</h2>
</header>
<section id="page-content" class="shopcar-content">
    <div id="redlist">


        @if (Model != null && Model.Count > 0)
        {

            foreach (var item in Model)
            {
                <div class="redItem">
                    <div class="lr-pad">
                        <div class="redpad">
                            <span class="rd @(item.status==0?"rd_curr":"")"></span>
                            <h4>$@item.moeny</h4><p class="txt_curr">@(item.startTime.ConvertToPublicDateFormat("yyyy-MM-dd"))至@(item.endTime.ConvertToPublicDateFormat("yyyy-MM-dd"))</p>
                            <span class="un @(item.status == 0 ? "un_curr" : "")"></span>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
              <div class="redItem">
                    <div class="lr-pad">
                        <div class="redpad">
                            <h5 style="margin-left:15%;">亲，您暂时没有得到红包。</h5> 
                        </div>
                    </div>
                </div>
        }
    </div>
</section>
