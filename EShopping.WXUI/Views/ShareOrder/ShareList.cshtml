@using EShopping.Entity.Response.DTO
@using EShopping.Common

@model List<QueryShareInfoListDTO>

<header id="header" class="shopcar-top">
    <h2>晒单分享</h2>
</header>

@if (Model != null && Model.Count != 0)
{
    foreach (var item in Model)
    {
        <div class="share">

            <div class="share_list">
                <div class="share_title">
                    <div class="share_padd">
                        <a class="sh_photo" href="@Url.Action(" index", "UserCenter", new { id = @item.winnerUserId })" title=""><img class="lazy" src="/images/defaultloading.gif" data-original="@(item.userInfoVO.faceImg)" /></a>
                        <ul class="sh_tit_inner">
                            <li class="namecol"><a href="@Url.Action(" index", "UserCenter", new { id = @item.winnerUserId })">@item.userInfoVO.nickName</a></li>
                            <li class="times">@item.shareDate.ConvertToPublicDate()</li>
                        </ul>
                        <p class="info">@item.productVO.productName</p>
                    </div>
                </div>
                <div class="share_mes">
                    <div class="share_padd">
                        <p>@item.shareContent</p>
                    </div>
                    <ul class="share_pro_list">
                        @if (item.ShareImages != null && item.ShareImages.Count > 0)
                        {
                            foreach (var img in item.ShareImages)
                            {
                                <li><a href="javascript:;" title=""><img class="lazy" src="/images/defaultloading.gif" data-original="@img" width="100%" /></a></li>
                            }
                        }
                    </ul>
                </div>
                <ul class="share_sub">
                    <li><a href="@Url.Action("SendUpCount", "ShareOrder", new { shareId = @item.Id, pageIndex = ViewBag.PageIndex, pageSize = ViewBag.PageSize })" title=""><em class="zhan">@item.upCount</em></a></li>
                    <li class="col"><a href="@Url.Action("Detail", "Product", new { id = @item.Id, spellBuyProductId = 0})" title="">我也想要</a></li>
                </ul>
            </div>


        </div>
    }
}
else
{
    <div class="redItem">
        <div class="lr-pad">
            <div class="redpad">
                <h5 style="margin-left:15%;">暂无晒单记录。</h5>
            </div>
        </div>
    </div>
}
